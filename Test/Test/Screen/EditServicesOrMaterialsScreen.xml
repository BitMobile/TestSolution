<?xml version="1.0" encoding="utf-8"?>

<c:Screen xmlns:c="BitMobile.ClientModel3.UI" xmlns:s="BitMobile.ValueStack">
  <c:VerticalLayout CssClass="RootLayout">
    <s:Push Id="serviceMaterial" Value="$GetServiceMaterialInfo()" />
    <c:Button Text="Back" OnClick="Back_OnClick" />
    <c:TextView Text="$serviceMaterial.Description" />
    <c:TextView Text="#count#" />
    <c:Button Id="RemoveButton" Text="-" OnClick="RemoveButton_OnClick" />
    <c:EditText Id="CountEditText" Text="$serviceMaterial.Count" Keyboard="numeric" OnLostFocus="CountEditText_OnLostFocus" />
    <c:Button Id="AddButton" Text="+" OnClick="AddButton_OnClick" />
    <c:TextView Text="#price#" />
    <c:TextView Text="$serviceMaterial.Price" />
    <c:TextView Text="#total#" />
    <c:TextView Text="$serviceMaterial.FullPrice" />
    <c:Button Text="#add#" />
  </c:VerticalLayout>
</c:Screen>